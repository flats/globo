{{#leaflet-map lat=lat lng=lng zoom=zoom}}

  {{tile-layer url="http://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}.png"}}
  {{#each model as |pin|}}
    {{#marker-layer lat=pin.lat lng=pin.long}}
      <h3>{{pin.nickname}}</h3>
      <p>{{pin.description}}</p>
    {{/marker-layer}}
  {{/each}}
  
{{/leaflet-map}}

{{outlet}}
